@{
  Layout = "_Layout";
}

@using RestaurantTown.Models;
@model List<RestaurantTown.Models.Cuisine>;

<div class="container">
  <div class="row">
    <div class="col">

    </div>
    <div class="col">
      <div class="center">
        <h1>Cuisine Types</h1>

        @if (@Model.Count == 0)
        {
          <h3>No cuisines have been added yet!</h3>
        } 

        @foreach (Cuisine cuisine in Model)
        {
          <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
        }
        <div class="buttons">
          <p>@Html.ActionLink("Add new cuisine", "Create", new { @class = "btn btn-dark btn-large" })</p>

          <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-dark btn-large" })</p>
        </div>
      </div>
    </div>
    <div class="col">

    </div>
  </div>
</div>